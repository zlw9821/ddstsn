<?xml version="1.0" encoding="UTF-8" ?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">

  <profiles>
    <participant profile_name="unicast_participant" is_default_profile="true">
      <rtps>
        <builtin>
          <initialPeersList>
            <locator>
              <udpv4>
                <address>192.168.2.20</address>
                <port>7412</port>
              </udpv4>
            </locator>
            <locator>
              <udpv4>
                <address>192.168.3.20</address>
                <port>7412</port>
              </udpv4>
            </locator>
          </initialPeersList>
        </builtin>

        <!-- 使用内建 UDP -->
        <useBuiltinTransports>true</useBuiltinTransports>

        <defaultUnicastLocatorList>
          <locator>
            <udpv4>
              <address>192.168.2.20</address>
            </udpv4>
          </locator>
        </defaultUnicastLocatorList>

      </rtps>
    </participant>
  </profiles>
</dds>
